#include <stdio.h>
#include <assert.h>
#include <math.h>
#include <string.h>

int contaVogais (char *s){
    int i,j;
    char vogais[] = "aeiouAEIOU";
    int count=0;
    
    for(i=0;s[i] != '\0';i++){
        for(j=0;s[j] != '\0';j++){
            if(s[i]==vogais[j])
            count++;
        }
    }
    return count;
}

int retiraVogaisRep(char *s) {
    int removidas = 0, pos=0;

    for (int i = 0; s[i] != '\0';pos++) {
        s[pos] = s[i++];
        int min = (s[pos] == 'a' || s[pos] == 'e' || s[pos] == 'i' || s[pos] == 'o' || s[pos] == 'u');
        int mai = (s[pos] == 'A' || s[pos] == 'E' || s[pos] == 'I' || s[pos] == 'O' || s[pos] == 'U');
        if (min || mai) {
            while (s[pos] == s[i]) {
              i++;
              removidas++;
            }
        }
    }
    s[pos] = '\0';
    return removidas;
}

int duplicaVogais (char *s){
        int duplicados = 0, pos=0;

    for (int i = 0; s[i] != '\0';pos++) {
        s[pos] = s[i++];
        int min = (s[pos] == 'a' || s[pos] == 'e' || s[pos] == 'i' || s[pos] == 'o' || s[pos] == 'u');
        int mai = (s[pos] == 'A' || s[pos] == 'E' || s[pos] == 'I' || s[pos] == 'O' || s[pos] == 'U');
        if (min || mai) {
            s[pos++]=s[pos];
            i++;
            duplicados++;
           
        }
    }
    s[pos] = '\0';
    return duplicados;
}




