
-----Ex 1-------------------------------------------------------------

#include <stdio.h>

void square()
{
    int x;
    int i;
    int j;
    
    printf("introduza um numero:\n");
    scanf("%i",&x);
    
    for(i=0;i<x;i++){
        for(j=0;j<x;j++){
            printf("#");
        }
        printf("\n");
    }

    return 0;
}

-----Ex 2------------------------------------------------------------
void chess()
{
    int x;
    int i;
    int j;
    char elemento = '#';
    
    printf("introduza um numero:\n");
    scanf("%i",&x);
    
    for(i=0;i<x;i++){
        for(j=0;j<x;j++){
            printf("%c",elemento);
            
            if (elemento == '#'){
                elemento = '_';
            }
            else elemento ='#';  
          
        }
   
   printf("\n");
    }

    return 0;
}

-----Ex 3---------------------------------------------------------------
void triangle_v()
{
    int x;
    int i;
    int j;
    
    printf("introduza um numero:\n");
    scanf("%i",&x);
    
    for(i=0;i<=x;i++){
        for(j=0;j<i;j++)
            printf("#");
        printf("\n");
        
    }
    
    for(i=0;i<x;i++){
        for(j=x;j>i;j--){
            printf("#");
          
        }
   
   printf("\n");
    }

    return 0;
}


int triangle_h()
{
    int x;
    int i;
    int k;
    
    printf("introduza um numero:\n");
    scanf("%d",&x);
    
     for(int i = 1; i <= x; i++) {
        int j = i - 1;
        for(int k = 0; k < x - 1 - j; k++) printf(" ");
        for(int k = 0; k < 1 + 2 * j; k++) printf("#");
        printf("\n");
    }

    
    return 0;
}

